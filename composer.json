{
	"name": "rich4rdmuvirmi/zimrate",
	"type": "project",
	"description": "Zimrate Server",
	"homepage": "https://zimrate.tyganeutronics.com",
	"license": "MIT",
	"authors": [
		{
			"name": "Richard Muvirimi",
			"email": "richard@tyganeutronics.com",
			"homepage": "https://richard.co.zw",
			"role": "Developer"
		}
	],
	"config": {
		"platform": {
			"php": "8.1"
		},
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"inpsyde/composer-assets-compiler": true
		},
		"process-timeout": 0
	},
	"require": {
		"php": ">=8.1",
		"codeigniter4/framework": "^4.0",
		"symfony/polyfill-php82": "*",
		"webonyx/graphql-php": "^14.11",
		"ext-json": "*",
		"ext-intl": "*",
		"symfony/dom-crawler": "^5.4",
		"symfony/css-selector": "^5.4",
		"br33f/php-ga4-mp": "^0.1.3"
	},
	"require-dev": {
		"fakerphp/faker": "^1.9",
		"mikey179/vfsstream": "^1.6",
		"phpunit/phpunit": "^9.1",
		"squizlabs/php_codesniffer": "^3.3",
		"phpcompatibility/php-compatibility": "^9.3",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
		"inpsyde/composer-assets-compiler": "^2.5",
		"friendsofphp/php-cs-fixer": "^3.16"
	},
	"suggest": {
		"ext-fileinfo": "Improves mime type detection for files"
	},
	"autoload": {
		"exclude-from-classmap": [
			"**/Database/Migrations/**"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Support\\": "tests/_support"
		}
	},
	"scripts": {
		"qc": [
			"@phpcs",
			"@test"
		],
		"php-cs-setup": [
			"Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run",
			"@phpcs -i"
		],
		"phpcs": [
			"vendor/bin/phpcs ."
		],
		"crawl": "@php spark crawl",
		"test": "phpunit",
		"php-cs-fixer": "php-cs-fixer --config=./.phpcs.xml"
	},
	"support": {
		"forum": "https://forum.codeigniter.com/",
		"source": "https://github.com/codeigniter4/CodeIgniter4",
		"slack": "https://codeigniterchat.slack.com"
	},
	"extra": {
		"composer-asset-compiler": {
			"dependencies": "update",
			"script": "build",
			"auto-run": "true",
			"wipe-node-modules": "false"
		}
	}
}
