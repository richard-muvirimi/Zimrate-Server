<?xml version="1.0"?>
<ruleset name="Zimrate Standard" namespace="RichardMuvirimi\Zimrate\">
<description>Coding Standards for Zimrate and Php 7.4</description>

<exclude-pattern>*/vendor/*</exclude-pattern>
<exclude-pattern>*/tests/*</exclude-pattern>
<exclude-pattern>*/index.php</exclude-pattern>
<exclude-pattern>*/preload.php</exclude-pattern>
<exclude-pattern>*/node_modules/*</exclude-pattern>
 <exclude-pattern>*/app/Config/*</exclude-pattern>
 <exclude-pattern>*/app/Language/*</exclude-pattern>
 <exclude-pattern>*/app/Views/errors/*</exclude-pattern>
 <exclude-pattern>*/app/Database/*</exclude-pattern>

 <arg name="extensions" value="php"/>

 <config name="testVersion" value="7.4-"/>

 <rule ref="CodeIgniter4"/>
 <rule ref="PHPCompatibility">
    <exclude name="CodeIgniter4.Commenting.FileComment.Missing" />
    <exclude name="CodeIgniter4.NamingConventions.ValidVariableName.ObjectVariableNotLowerCamelCase" />
 </rule>
</ruleset>
